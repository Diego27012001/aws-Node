
<div class="row">
    {{#each notes}}
        <div class="card m-2 col-md-3">
            <div class="card-body">
                <h4 class="card-title text-muted p-2 d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{description}}
                </p>
                <button class="btn btn-danger btn-block btn-sm w-100">
                      Delete
                 </button>
                
            </div>
        </div>
    {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead">No hay notas en este momento </p>
                    <a href="/notes/add" class="btn btn-success btn-block">Create one!</a>  
                </div>
            </div>
    {{/each}}
</div>



